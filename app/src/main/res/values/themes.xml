<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FixedSize" parent="android:Theme.Holo.Light">
        <item name="android:actionBarSize">55dip</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:dropDownListViewStyle">@style/MyListViewStyle</item>
        <item name="android:spinnerStyle">@style/SpinnerTheme</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteEditTextTheme</item>
        <item name="android:editTextStyle">@style/EditTextTheme</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/action_bar_gradient</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:textSize">6pt</item>
    </style>

</resources>