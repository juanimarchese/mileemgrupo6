<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/transparent_black"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        <TextView
            android:id="@+id/operacion_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/operacion_txt"
            android:textColor="@color/white"
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/operacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:drawSelectorOnTop="true"
            android:inputType="textNoSuggestions"
            android:prompt="@string/operacion_txt"
            android:spinnerMode="dropdown"
            android:textColor="@color/white"
            android:textSize="18sp"></Spinner>

        <TextView
            android:id="@+id/tipo_propiedad_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/tipo_propiedad_txt"
            android:textColor="@color/white"
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/tipo_propiedad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:drawSelectorOnTop="true"
            android:inputType="textNoSuggestions"
            android:prompt="@string/tipo_propiedad_txt"
            android:spinnerMode="dropdown"
            android:textColor="@color/white"
            android:textSize="18sp"></Spinner>

        <!--Put form controls here-->
        <TextView
            android:id="@+id/barriolabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/barrio"
            android:textColor="@color/white"
            android:textSize="18sp"></TextView>

        <com.mileem.mileem.widgets.CustomAutoCompleteTextView
            android:id="@+id/barrio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:completionHintView="@layout/spinner_dropdown_item"
            android:ems="200"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:spinnerMode="dropdown"
            android:textColor="@color/white"
            android:textSize="18sp"></com.mileem.mileem.widgets.CustomAutoCompleteTextView>

        <TextView
            android:id="@+id/ambientes_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/ambientes_txt"
            android:textColor="@color/white"
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/ambientes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:drawSelectorOnTop="true"
            android:inputType="textNoSuggestions"
            android:prompt="@string/ambientes_txt"
            android:spinnerMode="dropdown"
            android:textColor="@color/white"
            android:textSize="18sp"></Spinner>

        <TextView
            android:id="@+id/m2_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/m2_txt"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/m2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:drawSelectorOnTop="true"
            android:inputType="textNoSuggestions"
            android:prompt="@string/m2_txt"
            android:spinnerMode="dropdown"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="18sp"></Spinner>

        <TextView
            android:id="@+id/fecha_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/fecha_txt"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/fecha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:drawSelectorOnTop="true"
            android:inputType="textNoSuggestions"
            android:prompt="@string/fecha_txt"
            android:spinnerMode="dropdown"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="18sp"></Spinner>

        <TextView
            android:id="@+id/moneda_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/moneda_txt"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/moneda"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:drawSelectorOnTop="true"
            android:inputType="textNoSuggestions"
            android:prompt="@string/moneda_txt"
            android:spinnerMode="dropdown"
            android:visibility="gone"
            android:hint="@string/moneda_txt"
            android:textColor="@color/white"
            android:textSize="18sp"></Spinner>

        <TextView
            android:id="@+id/precio_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/precio_txt"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="18sp"></TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"

            >
            <EditText
                android:id="@+id/precio_min"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_weight="0.5"
                android:inputType="number"
                android:ems="200"
                android:lines="1"
                android:visibility="gone"
                android:maxLength="9"
                android:hint="@string/precio_min_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/precio_max"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:ems="200"
                android:lines="1"
                android:visibility="gone"
                android:inputType="number"
                android:maxLength="9"
                android:hint="@string/precio_max_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/button_advance"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:background="@color/holo_blue"
                android:focusable="true"
                android:text="@string/button_avanzada"
                android:textColor="@color/white"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="13sp" />

            <Button
                android:id="@+id/button_buscar"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:background="@color/holo_blue"
                android:focusable="true"
                android:text="@string/button_buscar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:textSize="13sp" />
        </LinearLayout>






    </LinearLayout>
</RelativeLayout>