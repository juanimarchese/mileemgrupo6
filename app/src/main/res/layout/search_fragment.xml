<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true">
        <LinearLayout
            android:windowSoftInputMode="adjustResize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent_black"
            android:layout_centerHorizontal="true"

            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp">

            <TextView
                android:id="@+id/operacion_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/operacion_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"></TextView>

            <Spinner
                android:id="@+id/operacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:drawSelectorOnTop="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textNoSuggestions"
                android:prompt="@string/operacion_txt"></Spinner>

            <TextView
                android:id="@+id/tipo_propiedad_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tipo_propiedad_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"></TextView>

            <Spinner
                android:id="@+id/tipo_propiedad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:drawSelectorOnTop="true"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:inputType="textNoSuggestions"
                android:prompt="@string/tipo_propiedad_txt"></Spinner>

            <!--Put form controls here-->
            <TextView
                android:id="@+id/barriolabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/barrio"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"></TextView>

            <com.mileem.mileem.widgets.CustomAutoCompleteTextView
                android:id="@+id/barrio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:completionHintView="@layout/spinner_dropdown_item"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:ems="200"
                android:inputType="textNoSuggestions"
                android:spinnerMode="dropdown">
            </com.mileem.mileem.widgets.CustomAutoCompleteTextView>

            <TextView
                android:id="@+id/ambientes_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/ambientes_txt"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"></TextView>

            <Spinner
                android:id="@+id/ambientes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:textColor="@color/white"
                android:spinnerMode="dropdown"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="textNoSuggestions"
                android:prompt="@string/ambientes_txt"></Spinner>

            <Button
                android:id="@+id/button_buscar"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/button_buscar"
                android:focusable="true"
                android:textColor="@color/white"
                android:background="@color/holo_blue"
                android:textSize="20sp" />
        </LinearLayout>
</RelativeLayout>