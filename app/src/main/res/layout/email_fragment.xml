<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:scrollbars="vertical"
    android:background="@color/transparent_white"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >


        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_txt"
                android:layout_marginTop="2dp"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/numeroPublicacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"></TextView>
            <TextView
                android:id="@+id/direccion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                ></TextView>

            <TextView
                android:id="@+id/barrio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/header"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textEmailAddress"
                style="@style/EditTextTheme" />

            <EditText
                android:id="@+id/telefono"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/telefono_hint"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="phone"
                style="@style/EditTextTheme"/>

            <EditText
                android:id="@+id/hsRespuesta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hr_hint"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:maxLines="2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/EditTextTheme"/>

            <EditText
                android:id="@+id/mensaje"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mensaje_hint"
                android:textColorHint="#000000"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                android:maxLines="2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/EditTextTheme"/>

            <Button
                android:id="@+id/button_enviar"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/button_enviar"
                android:focusable="true"
                android:textColor="@color/white"
                android:background="@color/holo_blue"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>